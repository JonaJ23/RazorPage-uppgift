@page
@model RazorPage_uppgift.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Event.Title)</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Event.Description)</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.SpotsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.SpotsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Organizer)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="../Organizers/Details" asp-route-id=@Model.Event.OrganizerID>
                @Html.DisplayFor(model => model.Event.Organizer.Name)
            </a>
        </dd>
    </dl>
</div>


<div>
    @if (Model.Event.SpotsAvailable == 0)
    {
        <p>This event is fully booked.</p>
    }
    @if (Model.Event.SpotsAvailable > 0 && !Model.EventIsListed)
    {
        <p><a asp-page="../JoinedEvents/Create" asp-route-id="@Model.Event.EventID" class="btn btn-primary btn-group-lg">Join</a> | <a asp-page="./Index">Back to List</a></p>
    }
    @if (Model.EventIsListed)
    {
        <p>You have signed up for this event.</p>
        <p><a asp-page="./Index">Back to List</a></p>
    }
</div>
