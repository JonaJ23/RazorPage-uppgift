@page
@model RazorPage_uppgift.Pages.Organizers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Organizers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organizer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organizer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organizer[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Organizer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.OrganizerID">About</a>
            </td>
        </tr>
}
    </tbody>
</table>
