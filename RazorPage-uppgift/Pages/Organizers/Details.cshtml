@page
@model RazorPage_uppgift.Pages.Organizers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>@Html.DisplayFor(model => model.Organizer.Name)</h1>
    <hr />
    <h5>Contact:</h5>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organizer.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Organizer.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Organizer.PhoneNumber)
        </dd>
    </dl>
</div>

<h4>Upcoming Events</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organizer.Events.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organizer.Events.First().Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
        <tr>
        <td>
        <a asp-page="../Events/Details" asp-route-id="@item.EventID">@Html.DisplayFor(modelItem => item.Title)</a>
        </td>
            <td>
            @item.Date.ToLongDateString()
            </td>
        </tr>
        }
    </tbody>
</table>
